# Database Configuration
# For Docker deployment:
DATABASE_URL=postgresql://ticketly_user:ticketly_password@db:5432/ticketly_db
# For local development with PostgreSQL:
# DATABASE_URL=postgresql://ticketly_user:ticketly_password@localhost:5432/ticketly_db
# For local development with SQLite (easiest, no setup):
# DATABASE_URL=sqlite:///./ticketly.db

# JWT Configuration
# IMPORTANT: Generate a secure random key for production using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Ticketly
DEBUG=True
