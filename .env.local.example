# Local Development Environment Configuration
# Copy this file to .env for local development without Docker

# Database Configuration
# Option 1: SQLite (easiest for local development, no setup required)
DATABASE_URL=sqlite:///./ticketly.db

# Option 2: Local PostgreSQL (more production-like)
# DATABASE_URL=postgresql://ticketly_user:ticketly_password@localhost:5432/ticketly_db

# JWT Configuration
# For local development only - generate a secure key for production using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=local-development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Ticketly
DEBUG=True
